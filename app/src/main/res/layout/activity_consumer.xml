<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.myui.ConsumerActivity"
    android:background="#FFCEC5CE"
    tools:openDrawer="start"
    android:id="@+id/drawer_layout_consumer"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/id_rela_layout_consumer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/id_main_app_bar_consumer"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/id_search_item_consumer"
            android:padding="15dp"
            android:layout_toLeftOf="@+id/id_search"
            android:layout_margin="8dp"
            android:background="@drawable/input"
            android:drawableLeft="@drawable/ic_search"
            android:hint="Search your items"
            android:layout_below="@+id/id_main_app_bar_consumer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/id_search"
            android:layout_margin="10dp"
            android:text="search"
            android:layout_below="@+id/id_main_app_bar_consumer"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"/>

        <fragment
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:id="@+id/id_map_fragment"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/id_search_item_consumer"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            tools:context=".MapsActivity"
            />


        <ListView
            android:id="@+id/id_my_list_view"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/id_map_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>




    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/id_navigationView_consumer"
        android:layout_gravity="right"
        app:headerLayout="@layout/header_layout_navigation_drawer"
        android:layout_width="wrap_content"
        app:menu="@menu/consumer_navigation_drawer_items"
        android:layout_height="match_parent">
    </com.google.android.material.navigation.NavigationView>



</androidx.drawerlayout.widget.DrawerLayout>