<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.myui.RetailerActivity"
    tools:openDrawer="start"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true">


    <RelativeLayout
        android:id="@+id/id_rela_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/id_main_app_bar"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>




           <EditText
               android:id="@+id/id_search_item_retailer"
               android:padding="15dp"
               android:layout_toLeftOf="@+id/id_search"
               android:layout_margin="8dp"
               android:background="@drawable/input"
               android:drawableLeft="@drawable/ic_search"
               android:hint="Search your items"
               android:layout_below="@+id/id_main_app_bar"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

           <Button
               android:id="@+id/id_search_retailer"
               android:layout_margin="10dp"
               android:text="search"
               android:layout_below="@+id/id_main_app_bar"
               android:layout_width="wrap_content"
               android:layout_alignParentEnd="true"
               android:layout_height="wrap_content"/>




        <FrameLayout
            android:id="@+id/id_my_retailer_fram_lay"
            android:layout_width="match_parent"
            android:layout_margin="30dp"
            android:layout_below="@+id/id_main_app_bar"
            android:layout_height="wrap_content">

        </FrameLayout>

        <ListView
            android:id="@+id/id_my_list_view"
            android:layout_below="@+id/id_my_retailer_fram_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/id_navigationView"
        android:layout_gravity="right"
        app:headerLayout="@layout/header_layout_navigation_drawer"
        android:layout_width="wrap_content"
        app:menu="@menu/main_navigation_menu"
        android:layout_height="match_parent">
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>