<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/temp"
    tools:context=".ui.myui.PhoneLoginActivity">

    <EditText
        android:id="@+id/id_phone_numberInput"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:textColor="@android:color/black"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/post_border"
        android:padding="8dp"
        android:hint="   Enter phone number"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:gravity="center"
        android:drawableStart="@drawable/phone"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/id_verification_code_input"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/id_phone_numberInput"
        android:background="@drawable/post_border"
        android:padding="5dp"
        android:hint="Enter verification code"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:drawableStart="@drawable/password"
        android:gravity="center"
        android:textAlignment="center"
        android:visibility="invisible"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/send_verf_code"
        android:text="log in"
        android:layout_below="@+id/id_verification_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:textSize="19dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/small_background"
        />

    <Button
        android:id="@+id/send_verf_accnt"
        android:text="Enter the verification code"
        android:layout_below="@+id/send_verf_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:visibility="invisible"
        android:textColor="@android:color/white"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:textSize="19dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/small_background"
        />

</RelativeLayout>